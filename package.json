{
  "name": "bandland",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "setup-access": "node scripts/setup-access.mjs",
    "verify-access": "node scripts/verify-access.mjs",
    "docker:build": "docker build -t bandland .",
    "docker:run": "docker run --rm -p 3000:3000 -e NEXT_PUBLIC_SITE_URL=${NEXT_PUBLIC_SITE_URL:-http://localhost:3000} bandland",
    "docker:dev": "docker compose --profile dev up --build",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "podman:build": "podman build -t bandland .",
    "podman:run": "podman run --rm -p 127.0.0.1:3000:3000 -e NEXT_PUBLIC_SITE_URL=${NEXT_PUBLIC_SITE_URL:-http://localhost:3000} bandland",
    "podman:run:host": "podman run --rm --network=host -e NEXT_PUBLIC_SITE_URL=${NEXT_PUBLIC_SITE_URL:-http://localhost:3000} bandland",
    "podman:dev": "podman-compose --profile dev up --build",
    "podman:up": "podman-compose up --build",
    "podman:down": "podman-compose down"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "next": "16.0.10",
    "next-auth": "5.0.0-beta.30",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
